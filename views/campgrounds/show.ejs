<% layout ('layout/boilerplate') %>
  <h1>
    <%=campground.title%>
  </h1>
  <h2>
    <%=campground.location%>
  </h2>
  <img src="<%=campground.image%>">
  <p>
    <%=campground.description%>
  </p>
  <footer>
    <div><a href="/campgrounds/<%=campground._id%>/edit">Edit</a></div>
    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
      <button>Delete</button>
    </form>
    <div><a href="/campgrounds">All Campgrounds</a></div>
  </footer>